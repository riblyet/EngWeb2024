extends layout

block content
    .w3-card-4
    header.w3-container.w3-cyan
        h1= title
    .w3-container
        form.w3-container(method="POST")
            fieldset
                legend Metadados
                label ID
                input.w3-input.w3-round(type="text", name="id")
                label Nome
                input.w3-input.w3-round(type="text", name="nome")
                label Bio 
                input.w3-input.w3-round(type="text", name="bio")
                label Data de Nascimento
                input.w3-input.w3-round(type="text", name="dataNasc")
                label Data de Obito
                input.w3-input.w3-round(type="text", name="dataObito")
                label Periodo
                input.w3-input.w3-round(type="text", name="periodo")

            button.w3-btn.w3-cyan.w3-mb-2(type="submit") Register

    footer.w3-container.w3-cyan
        address Generated in EngWeb2024 in #{data}
        a(href="/") Voltar   

